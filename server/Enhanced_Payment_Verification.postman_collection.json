{
  "info": {
    "name": "Enhanced Payment Verification Tests",
    "description": "Complete testing collection for enhanced payment verification with success/failure feedback",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    },
    {
      "key": "userId",
      "value": "",
      "type": "string"
    },
    {
      "key": "orderId",
      "value": "",
      "type": "string"
    },
    {
      "key": "paymentReference",
      "value": "",
      "type": "string"
    },
    {
      "key": "paymentId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "1. Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/health",
          "host": ["{{baseUrl}}"],
          "path": ["health"]
        }
      },
      "response": []
    },
    {
      "name": "2. Login User",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 200) {",
              "    const response = pm.response.json();",
              "    pm.collectionVariables.set('token', response.token);",
              "    pm.collectionVariables.set('userId', response.user.id);",
              "    console.log('Login successful, token saved');",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"testcustomer@example.com\",\n  \"password\": \"testpassword123\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/login",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "login"]
        }
      },
      "response": []
    },
    {
      "name": "3. Process Online Payment Checkout",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 201) {",
              "    const response = pm.response.json();",
              "    pm.collectionVariables.set('orderId', response.data.order._id);",
              "    pm.collectionVariables.set('paymentReference', response.data.reference);",
              "    console.log('Online Payment Order created:', response.data.order._id);",
              "    console.log('Payment Reference:', response.data.reference);",
              "    console.log('Authorization URL:', response.data.authorizationUrl);",
              "    console.log('Next Step:', response.data.nextStep);",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"shippingAddress\": {\n    \"street\": \"123 Test Street\",\n    \"city\": \"Test City\",\n    \"state\": \"Test State\",\n    \"zipCode\": \"12345\",\n    \"country\": \"Nigeria\"\n  },\n  \"paymentMethod\": \"online_payment\",\n  \"paymentCountry\": \"Nigeria\",\n  \"email\": \"testcustomer@example.com\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/checkout/process",
          "host": ["{{baseUrl}}"],
          "path": ["api", "checkout", "process"]
        }
      },
      "response": []
    },
    {
      "name": "4. Verify Payment - Invalid Reference",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/checkout/verify-payment/invalid_reference_123",
          "host": ["{{baseUrl}}"],
          "path": ["api", "checkout", "verify-payment", "invalid_reference_123"]
        }
      },
      "response": []
    },
    {
      "name": "5. Verify Payment - Valid Reference (Pending)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "console.log('Payment verification response:', pm.response.json());",
              "const response = pm.response.json();",
              "if (response.success) {",
              "    console.log('Payment Status:', response.paymentStatus);",
              "    console.log('Can Checkout:', response.data.canCheckout);",
              "    console.log('Next Step:', response.data.nextStep);",
              "    if (response.data.paymentId) {",
              "        pm.collectionVariables.set('paymentId', response.data.paymentId);",
              "        console.log('Payment ID saved:', response.data.paymentId);",
              "    }",
              "} else {",
              "    console.log('Payment failed:', response.message);",
              "    console.log('Retry Payment:', response.data.retryPayment);",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/checkout/verify-payment/{{paymentReference}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "checkout", "verify-payment", "{{paymentReference}}"]
        }
      },
      "response": []
    },
    {
      "name": "6. Get Order Status - Before Payment",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const response = pm.response.json();",
              "console.log('Order Status Response:', response);",
              "console.log('Order Status:', response.data.status);",
              "console.log('Payment Status:', response.data.paymentStatus);",
              "console.log('Can Checkout:', response.data.canCheckout);",
              "console.log('Next Step:', response.data.nextStep);",
              "console.log('Redirect URL:', response.data.redirectUrl);"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/checkout/order-status/{{orderId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "checkout", "order-status", "{{orderId}}"]
        }
      },
      "response": []
    },
    {
      "name": "7. Verify Payment - Already Verified (Test)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/checkout/verify-payment/{{paymentReference}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "checkout", "verify-payment", "{{paymentReference}}"]
        }
      },
      "response": []
    },
    {
      "name": "8. Get Order Status - After Payment",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const response = pm.response.json();",
              "console.log('Final Order Status:', response);",
              "console.log('Order Status:', response.data.status);",
              "console.log('Payment Status:', response.data.paymentStatus);",
              "console.log('Can Checkout:', response.data.canCheckout);",
              "console.log('Next Step:', response.data.nextStep);",
              "console.log('Payment ID:', response.data.paymentReference);",
              "console.log('Total Amount:', response.data.totalAmount);",
              "console.log('Item Count:', response.data.itemCount);"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/checkout/order-status/{{orderId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "checkout", "order-status", "{{orderId}}"]
        }
      },
      "response": []
    },
    {
      "name": "9. Test COD Order Status",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 201) {",
              "    const response = pm.response.json();",
              "    pm.collectionVariables.set('codOrderId', response.data.order._id);",
              "    console.log('COD Order created:', response.data.order._id);",
              "    console.log('Next Step:', response.data.nextStep);",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"shippingAddress\": {\n    \"street\": \"456 COD Street\",\n    \"city\": \"COD City\",\n    \"state\": \"COD State\",\n    \"zipCode\": \"54321\",\n    \"country\": \"Nigeria\"\n  },\n  \"paymentMethod\": \"cash_on_delivery\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/checkout/process",
          "host": ["{{baseUrl}}"],
          "path": ["api", "checkout", "process"]
        }
      },
      "response": []
    },
    {
      "name": "10. Get COD Order Status",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/checkout/order-status/{{codOrderId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "checkout", "order-status", "{{codOrderId}}"]
        }
      },
      "response": []
    }
  ]
}
